<!--index.wxml-->
<view class="container">
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for-items="{{banner_list[0].banner}}">
    <swiper-item>
      <image src="{{item.pic_url}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>
 <view>
  <view class='menueview' >
   <block wx:for-items="{{banner_list[1].banner}}">
   <image src="{{item.pic_url}}" class="menue-image" />
   </block>
  </view>
 </view>
 <!-- <view class='separator'></view> -->
<view class='floortitle'>
  <image class="notice-image" src="../../images/ic_start.png" />
  <view class='floortitle-icon'>新游上线</view>
  <!-- <view class='floortitlemoretext'>更多> </view> -->
</view>
<view class='hotgoodcontainer'>
  <view class='gooditem' wx:for="{{hotgoods}}" wx:for-index="idx" wx:for-item="good">
    <view class='imgview'>
      <image class='productimg' src='{{good.pic_url}}'/>
    </view>
    <view class='new-item'>{{good.name}}</view>
  </view>
</view>
<scroll-view scroll-y="true">
		<view class='game-list'>
      <view class='game' wx:for="{{gamelist}}" wx:for-index="idx" wx:for-item="gameitem">
        <view class='imgview'>
          <image class='productimg' src='{{gameitem.pic_url}}'/>
        </view>
        <view class='game-title'>熊猫日记</view>
        <view class='game-num'><view class='nums'>237</view>人在玩</view>
        <view class='game-desc'>世界那么大，谁爱去谁去看吧，我只想留在你身边</view>
    <!-- <view class='new-item'>{{gameitem.name}}</view> -->
      </view>
    </view>
			<view class="loading">努力加载中…</view>
		</scroll-view>
</view>
