/**index.wxss**/

.swiper {
  position: fixed !important;
  height: 350rpx;
  width: 100%;
  z-index: 1;
}

.slide-image {
  display: block;
  height: 350rpx;
  width: 100%;
  max-height: 350rpx;
  /* max-width: 190rpx; */
}

.menueview {
  display: flex;
  background-color: #fff;
  /* padding:5px 0 */
}

.banner-height {
  height: 265rpx;
}

.new-online {
  display: flex;
  /* flex: none; *//* flex-direction: row; */
  width: 100%;
  height: 80rpx;
  align-items: center;
  padding: 0 13rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.7);
  border-bottom: 1rpx solid #f93;
}

.new-text {
  color: #f93;
  font-size: 28rpx;
}

.new-icon {
  height: 35rpx;
  min-width: 35rpx;
  max-width: 35rpx;
  padding: 10rpx 10rpx;
}

.new-list {
  display: flex;
  justify-content: center;
  -webkit-justify-content: center;
  -webkit-align-items: center;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  height: 240rpx;
  white-space: nowrap;
  overflow: hidden;
  overflow-x: scroll; /* 1 */
  background-color: #ffebe5;
}

.new-item {
  width: 25%;
  /* display: -webkit-box; *//* display: -webkit-flex; *//* display: -ms-flexbox; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  align-content: center;
  font-size: 30rpx;
  box-sizing: border-box;
  /* border: 0.5px solid #e2e2e3; */
  padding: 20rpx 20rpx;
}

.productimg {
  width: 150rpx !important;
  height: 150rpx !important;
  align-content: center;
}

.imgview {
  width: 200rpx;
  /* height: 200rpx; */
}

.new-name {
  font-size: 20rpx;
  text-align: center;
  /* height: 50px; */
}

.game-list {
  height: 970rpx;
}

.sub-game-list {
  height: 190rpx;
  /* width: 100%; */
  position: relative;
  border-bottom: 1px solid #f5f0f0;
  overflow: hidden;
  margin-left: -20rpx;
}

.sub-game-img {
  float: left;
  /* margin-left: 20rpx; */
}

.sub-game-middle {
  float: left;
  font-size: 28rpx;
}

.sub-game-title {
  display: flex;
  width: 340rpx;
  height: 40rpx;
  margin: 15rpx 0rpx;
  color: #2f3649;
  white-space: nowrap;
}

.sub-game-title span {
  font-size: 20rpx;
  font-weight: bold;
  margin-right: 26rpx;
}

.sub-game-num {
  /* margin-left: 15rpx; */
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 50rpx;
  width: 350rpx;
  font-size: 25rpx;
}

.sub-game-img image {
  width: 150rpx;
  height: 150rpx;
  vertical-align: middle;
}

.sub-game-img-inner {
  height: 190rpx;
  width: 226rpx;
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}

.game-title {
  display: flex;
  /* flex-direction: column; *//* justify-content: center; */
  width: 70%;
  height: 40rpx;
  font-size: 25rpx;
  font-weight: bold;
  font-style: black;
  text-align: center;
}

.game-num {
  width: 30%;
  height: 40rpx;
  font-size: 18rpx;
  text-align: center;
  position: relative;
  top: 6rpx;
  right: -8rpx;
}

.num {
  font-size: 18rpx;
  color: #f93;
}

.game-desc {
  font-size: 20rpx;
}

.index-btn {
  position: absolute;
  left: 0;
  width: 80rpx;
  font-size: 25rpx;
  white-space: nowrap;
  text-align: center;
  display: block;
  align-items: center;
  padding: 0;
  line-height: -5rpx;
  color: white;
  background-color: #f93;
}

.index-button1 {
  position: relative;
  width: 80rpx;
  height: 50rpx;
  margin-top: 60rpx;
  outline: none;
  display: flex;
  flex-flow: column;
  justify-content: flex-start;
  align-items: center;
  float: right;
  right: 50rpx;
  /* top: 14rpx; */
}

.bottom-img {
  display: block;
  height: 350rpx;
  width: 100%;
}

.follow {
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
}

.follow-img {
  height: 80rpx;
  min-width: 80rpx;
  max-width: 80rpx;
  padding: 10rpx 10rpx;
}

.come-top {
  text-align: center;
  padding: 20px;
  color: #f93;
  font-size: 20rpx;
}

.download {
  height: 100rpx;
  width: 100rpx;
}

.save {
  width: 500rpx;
  height: 110rpx;
  margin-top: 40rpx;
  border: 8rpx solid #ff6;
}

.close {
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  height: 80rpx;
  width: 80rpx;
}

/*button*/

.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}

/*mask*/

.modal_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
}

/*content*/

.modal_box {
  width: 650rpx;
  /* overflow: hidden; */
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  /* background: #fafafa; */
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}

.modal_title {
  padding: 15px;
  font: 20px "microsoft yahei";
  text-align: center;
  overflow: visible;
}

.qrcode {
  width: 500rpx;
  height: 500rpx;
}

.none {
  display: none;
}

.block {
  display: block;
}
